<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ehs.bluethoothcontrolrobot.CarControl">


    <ImageButton
        android:background="@mipmap/bottle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/butbottle"
        android:elevation="11dp"
        android:adjustViewBounds="false"
        android:cropToPadding="true"
        android:layout_centerVertical="true" />

    <ImageButton
        android:background="@mipmap/pencil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/butpencil"
        android:scaleType="fitStart"
        android:elevation="11dp"
        android:layout_alignTop="@+id/butbottle"
        android:layout_toRightOf="@+id/butbottle"
        android:layout_toEndOf="@+id/butbottle"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_alignBottom="@+id/butbottle" />

    <Button
        android:text="PLAY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/butplay"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:onClick="playMusic" />

    <TextView
        android:text=" "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textresult"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
        android:layout_below="@+id/butpencil"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        />

</RelativeLayout>
